@model LoginModel

@{
    ViewBag.Title = "Log In";
    Layout = "_Layout";
}

<div class="text-danger" asp-validation-summary="All"></div>
<div style=" color:black; font-weight:700;">
    <div style="text-align:center; display:block; margin:auto">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 pl-5 align-content-center mt-5"style="margin-top:auto" >
                <h4>Sign In</h4>
                    <form asp-action="Login" asp-controller="Account" class="form-control rounded r" style="background-color:ghostwhite; border:solid" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group col-8 mt-2" style="margin:auto">
                            <label asp-for="Email"></label>
                            <div><span asp-validation-for="Email" class="text-danger"></span></div>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group col-8 mt-2" style="margin:auto">
                            <label asp-for="Password"></label>
                            <div><span asp-validation-for="Password" class="text-danger"></span></div>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <button class="btn btn-primary mt-2" type="submit">Log In</button>
                    </form>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
        </div>
